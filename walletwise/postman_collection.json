{
  "info": {
    "name": "WalletWise API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/api/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "auth", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user1@example.com\",\n  \"password\": \"password\"\n}"
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "url": {
          "raw": "http://localhost:8080/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user1@example.com\",\n  \"password\": \"password\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Check Balance",
      "request": {
        "method": "GET",
        "header": [
          {"key": "Authorization", "value": "Bearer {{jwt}}"}
        ],
        "url": {
          "raw": "http://localhost:8080/api/wallet/balance",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "wallet", "balance"]
        }
      }
    }
  ]
}